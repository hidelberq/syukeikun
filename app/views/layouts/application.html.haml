!!! 5
%html
  %head
    %title Syukeikun
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags

%body
  .navbar
    .navbar-inner
      = link_to "しゅうけいくん", root_path, class: "brand"
      %p.navbar-text.pull-right
        - if current_user
          ようこそ、#{current_user.nickname}さん
          = link_to 'ログアウト', logout_path, method: :delete, class: 'navbar-link'
        - else
          = link_to 'ログイン', login_path, class: 'navbar-link'
          = link_to '登録', new_user_path, class: 'navbar-link'
  .container
    - if flash[:error]
      .alert.alert-error= flash[:error]
    = yield
